.block-area {
	background-color: #fff;
	padding: 30rpx;
}

.banner image {
	width: 100%;
	height: 400rpx;
}

.title {
	font-size: 40rpx;
	line-height: 1.2;
}

.block-info {
	margin-top: 20rpx;
	padding: 10rpx 0;
}

.block-info-left {
	float: left;
	width: 50%;
}

.block-info-right {
	float: right;
	width: 50%;
	text-align: right;
}

.section-title {
	border-bottom: 1px solid #eee;
	border-left: none;
}

.menu-text {
	font-size: 30rpx;
	color: #555;
}

.text {
	color: #555;
	line-height: 2;
}

.detial-image {
	display: block;
	margin: 10rpx;
}

.member-image {
	width: 50rpx;
	height: 50rpx;
	border-radius: 50%;
	margin: 10rpx;
	vertical-align: top;
}